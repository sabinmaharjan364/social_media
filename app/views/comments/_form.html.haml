= form_for([@hostel, @hostel.comments.build]) do |f|
  .row
    .col-md-4.form-group
      = f.label :commenter
      = f.text_field :commenter, class: "form-control"
  .row 
    .col-md-4.form-group
      = f.label :comment
      = f.text_area :comment, class: "form-control"
  .row    
    .col-md-6.form-group
      = f.submit "Add Comment", class: "btn btn-dark"
